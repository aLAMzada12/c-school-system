						Class[j + 1] = temp3;
					}
				}
			}


			// For A
			if (x == 'A')
			{
				cout << "Roll Number\tMid term marks (50)\tFinal term marks (100)\tClass\tGrade" << endl;
				for (int i = 0; i <50; i++)  // For printing of table after sorting
				{
					if (final[i] <= 100){
						cout << RollNo[i];
						cout << "\t\t" << mid[i] << "\t\t\t" << final[i];
						cout << "\t\t\t" << Class[i] << "\t ";
						if (final[i] >= 86)
							cout << grades[0] << endl;
						if (final[i] >= 73 && final[i] <= 85)
							cout << grades[1] << endl;
						if (final[i] >= 60 && final[i] <= 72)
							cout << grades[2] << endl;
						if (final[i] >= 50 && final[i] <= 59)
							cout << grades[3] << endl;
						if (final[i] < 50)
							cout << grades[4] << endl;
					}
				}
			}


			// For B
			if (x == 'B')
			{
				cout << "Roll Number\tMid term marks (50)\tFinal term marks (100)\tClass\tGrade" << endl;
				for (int i = 0; i <50; i++)  // For printing of table after sorting
				{
					if (final[i] <= 85){
						cout << RollNo[i];
						cout << "\t\t" << mid[i] << "\t\t\t" << final[i];
						cout << "\t\t\t" << Class[i] << "\t ";
						if (final[i] >= 86)
							cout << grades[0] << endl;
						if (final[i] >= 73 && final[i] <= 85)
							cout << grades[1] << endl;
						if (final[i] >= 60 && final[i] <= 72)
							cout << grades[2] << endl;
						if (final[i] >= 50 && final[i] <= 59)
							cout << grades[3] << endl;
						if (final[i] < 50)
							cout << grades[4] << endl;
					}
				}
			}

			// For C
			if (x == 'C')
			{
				cout << "Roll Number\tMid term marks (50)\tFinal term marks (100)\tClass\tGrade" << endl;
				for (int i = 0; i <50; i++)  // For printing of table after sorting
				{
					if (final[i] <= 72){
						cout << RollNo[i];
						cout << "\t\t" << mid[i] << "\t\t\t" << final[i];
						cout << "\t\t\t" << Class[i] << "\t ";
						if (final[i] >= 86)
							cout << grades[0] << endl;
						if (final[i] >= 73 && final[i] <= 85)
							cout << grades[1] << endl;
						if (final[i] >= 60 && final[i] <= 72)
							cout << grades[2] << endl;
						if (final[i] >= 50 && final[i] <= 59)
							cout << grades[3] << endl;
						if (final[i] < 50)
							cout << grades[4] << endl;
					}
				}
			}

			// For D
			if (x == 'D')
			{
				cout << "Roll Number\tMid term marks (50)\tFinal term marks (100)\tClass\tGrade" << endl;
				for (int i = 0; i <50; i++)  // For printing of table after sorting
				{
					if (final[i] <= 59){
						cout << RollNo[i];
						cout << "\t\t" << mid[i] << "\t\t\t" << final[i];
						cout << "\t\t\t" << Class[i] << "\t ";
						if (final[i] >= 86)
							cout << grades[0] << endl;
						if (final[i] >= 73 && final[i] <= 85)
							cout << grades[1] << endl;
						if (final[i] >= 60 && final[i] <= 72)
							cout << grades[2] << endl;
						if (final[i] >= 50 && final[i] <= 59)
							cout << grades[3] << endl;
						if (final[i] < 50)
							cout << grades[4] << endl;
					}
				}
			}

			// For F
			if (x == 'F')
			{
				cout << "Roll Number\tMid term marks (50)\tFinal term marks (100)\tClass\tGrade" << endl;
				for (int i = 0; i <50; i++)  // For printing of table after sorting
				{
					if (final[i] <= 50){
						cout << RollNo[i];
						cout << "\t\t" << mid[i] << "\t\t\t" << final[i];
						cout << "\t\t\t" << Class[i] << "\t ";
						if (final[i] >= 86)
							cout << grades[0] << endl;
						if (final[i] >= 73 && final[i] <= 85)
							cout << grades[1] << endl;
						if (final[i] >= 60 && final[i] <= 72)
							cout << grades[2] << endl;
						if (final[i] >= 50 && final[i] <= 59)
							cout << grades[3] << endl;
						if (final[i] < 50)
							cout << grades[4] << endl;
					}
				}
			}
		}
		
		
		cout << "Press e or E to exit the program :";
		cin >> work;
		if (work == 'e')  // Moving towards Condition for restart of program
		{
			exit++;
		}
		else               // Moving towards Condition for restart of program
			exit == 0;
	}while (exit == 0);  // Condition for restart of program
	system("Pause");
	return 0;
}
